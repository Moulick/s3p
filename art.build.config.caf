import &ArtStandardLib

package: (abcPackage) ->
  sourceDir = :source-source
  merge &package,
    scripts: merge &package.scripts,
      build:
        """
          caf -p -c #{sourceDir} -o source
          nn -sq

      build-clean:  "" rm -rf source/*; npm run build
      watch:        "" npm-watch

    watch:
      build:
        extensions: :caf
        patterns: [] :source-source
        "quiet": false
